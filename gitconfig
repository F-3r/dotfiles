[color]
        ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green 

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[credential]
        helper = cache
[push]
        default = simple

[alias]
        s = status -s
        c = checkout
        d = diff --word-diff --compaction-heuristic
        rfp= "git fetch origin/master && git rebase origin/master && git push -f" 

[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
